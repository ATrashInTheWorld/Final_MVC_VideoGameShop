@model IEnumerable<VideoGameShop2.Models.Products>
@using VideoGameShop2.Models

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_VGSLayout.cshtml";
    // Layout = "~/Views/Shared/_Layout.cshtml";



    //Before correcting, please note that
    //everting from this page works on the fact
    //That I know there are 11 records in the PRODUCTS table


    int counter = 0;
    List<Products> prods = Model as List<Products>;
    string[] imgPaths = new string[8];

    for (int c = 0; c < imgPaths.Length; c++)
    {
        imgPaths[c] = prods.ElementAt(c).imagePath;
    }
}

