    <p style="font-size:35px; color:darkgreen;">Latest products</p>
    @for (int c = 0; c < ((imgPaths.Length / 2) + 2); c++)
    {
        <img src="@Url.Content(String.Format("{0}", imgPaths[c]))" style="width:115px; height:115px; border:2px dashed yellow; margin-right:25px;" />
    }
</div>
